{% extends "AmttAppBundle:Shared:Layouts/base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/shared_occasions/style.css') }}" media="screen" />
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/shared_occasions/main.js') }}"></script>
{% endblock %}

{% block body %}
    <header>
        <div class="container">
            {% block header %}
                <p class="logo">{% block logo %}{% endblock %}</p>

                <div class="call">
                    <p class="photo"><img src="{{ asset('images/shared_occasions/visuel-contact.jpg') }}" alt=""></p>
                    <p class="phone"><span class="glyphicon glyphicon-earphone"></span> {{ website.phone }}</p>
                </div>
            {% endblock %}
        </div>
    </header>

    {% block main_nav %}
        <div class="container">
            {% include "AmttAppBundle:Shared:Partials/Nav/occasions_top_nav.html.twig" %}
        </div>
    {% endblock %}
    <section id="main-container">
        {% block main_container %}

        {% endblock %}
    </section>

    <footer>
        <div class="container">
            {% block footer %}
                {% include "AmttAppBundle:Shared:Partials/Footer/occasions_footer.html.twig" %}
            {% endblock %}
        </div>
    </footer>

{% endblock %}